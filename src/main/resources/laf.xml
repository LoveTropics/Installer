<synth>
	<object id="roboto16"
            class="org.lovetropics.installer.ui.util.CustomFonts" method="createFont">
		<string>/Roboto-Regular.ttf</string>
		<int>16</int>
	</object>
	<object id="roboto12"
            class="org.lovetropics.installer.ui.util.CustomFonts" method="createFont">
		<string>/Roboto-Regular.ttf</string>
		<int>12</int>
	</object>
	<style id="basicStyle">
		<font idref="roboto16" />
		<state>
			<color value="#FFA52C" type="BACKGROUND" />
			<color value="WHITE" type="FOREGROUND" />
		</state>
	</style>
	<style id="button">
		<opaque value="true" />
		<insets top="8" left="8" right="8" bottom="8" />
		<state>
			<color type="TEXT_FOREGROUND" value="BLACK" />
			<color type="BACKGROUND" value="#57B538" />
		</state>
		<state value="PRESSED">
			<color type="BACKGROUND" value="#31A2AC" />
		</state>
	</style>
	<style id="closeButton">
		<opaque value="true" />
		<insets top="8" left="8" right="8" bottom="8" />
		<state>
			<imagePainter method="buttonBackground"
				path="/times-solid.png" sourceInsets="0 0 0 0" />
			<color type="BACKGROUND" value="#FFA52C" />
		</state>
		<state value="MOUSE_OVER">
			<imagePainter method="buttonBackground"
				path="/times-solid.png" sourceInsets="0 0 0 0" />
			<color type="BACKGROUND" value="#CC3A4D" />
		</state>
	</style>
	<style id="textField">
		<opaque value="true" />
		<font idref="roboto12" />
		<insets top="4" left="2" right="2" bottom="1" />
		<state>
			<color type="BACKGROUND" value="WHITE" />
			<color type="TEXT_FOREGROUND" value="BLACK" />
			<color type="TEXT_BACKGROUND" value="#6bc1bb" />			
		</state>
	</style>
	<bind style="basicStyle" type="region" key=".*" />
	<bind style="button" type="region" key="Button" />
	<bind style="closeButton" type="name" key="Close" />
	<bind style="textField" type="region" key="TextField" />
</synth>